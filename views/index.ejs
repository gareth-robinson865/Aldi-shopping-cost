        <h2>All foods created</h2>
        <% if(foods.length > 0) { %>
            <% foods.forEach(food => { %>
                <a class="single" href="food/<%= food._id %>">
                    <h3 class="name"><%= food.name %></h3>
                    <p class="price">Â£<%= food.price %></p>
                    <p class="aisle">Item is found on aisle <%= food.aisle %></p>
                </a>
                <button>Add to list</button>
            <% }) %>
        <% } else { %>
            <p>There are no foods to display</p>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %> <!--footer partial-->
